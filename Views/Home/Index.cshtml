<div class="main__product container pt-0 pb-5">
    <h2 class="text-uppercase fw-500 text-center font-serif pt-5 p-4">Top sản phẩm bán chạy</h2>
    <div class="product-slide row row-cols-4" >
        <div class="swiffy-slider slider-item-show4 slider-nav-dark slider-nav-outside">
            <ul class="slider-container">
                @foreach (var product in Model)
                {
                    <li>
                        <div class="product col" style="width:270px; height:587px">
                            <div class="card border-0">
                                <a asp-action="Details" asp-controller="Product" asp-route-Id="@product.ProductId" style="color: black">
                                    <img src="~/images/product/@product.ImageUrl" alt="@product.ProductName" class="card-img-top" />
                                    <div class="card-body text-center">
                                        <h5 class="card-title fw-bold font-serif">@product.ProductName</h5>
